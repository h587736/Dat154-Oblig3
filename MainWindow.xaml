<Window x:Class="Oblig3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Oblig3"
        mc:Ignorable="d"
        
        Title="MainWindow" Height="450" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TabControl Grid.Row="1" Margin="10">
            <TabItem Header="All Students">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBox x:Name="searchBox" Width="150" Margin="0,0,10,0"/>
                        <Button x:Name="searchButton" Content="Search" Click="searchButton_Click"/>
                    </StackPanel>
                    <ListView Name="studentList" ItemsSource="{Binding}" Grid.Row="1" Margin="0,0,524,0">
                        <ListView.View>
                            <GridView>
                                <GridView.Columns>
                                    <GridViewColumn Width="90" Header="Student" DisplayMemberBinding="{Binding Path=Studentname}"/>
                                    <GridViewColumn Width="90" Header="ID" DisplayMemberBinding="{Binding Path=Id}"/>
                                    <GridViewColumn Width="90" Header="Age" DisplayMemberBinding="{Binding Path=Studentage}"/>
                                </GridView.Columns>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>
            </TabItem>
            
            <TabItem Header="Course Students">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
                        <ComboBox x:Name="courseComboBox" Width="150" ItemsSource="{Binding Courses}" DisplayMemberPath="Coursecode" SelectedValuePath="Coursecode" SelectedValue="{Binding SelectedCourseCode}" Margin="0,0,10,0"/>
                        <Button x:Name="searchCourseButton" Content="Search" Click="searchCourseButton_Click"/>
                    </StackPanel>
                    <ListView Name="courseStudentList" Margin="0,0,525,0" ItemsSource="{Binding CourseStudents}" Grid.Row="1">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="90" Header="Student ID" DisplayMemberBinding="{Binding Path=Studentid}" />
                                <GridViewColumn Width="90" Header="Course code" DisplayMemberBinding="{Binding Path=Coursecode}" />
                                <GridViewColumn Width="90" Header="Grade" DisplayMemberBinding="{Binding Path=Grade1}" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>

            <TabItem Header="Grade list">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
                        <TextBox x:Name="gradeSearchBox" Width="150" Margin="0,0,10,0"/>
                        <Button x:Name="searchGradeButton" Content="Search" Click="searchGradeButton_Click"/>
                    </StackPanel>
                    <ListView Name="GradeList" Margin="0,0,551,0" ItemsSource="{Binding Grades}" RenderTransformOrigin="0.52,0.504" Grid.Row="1">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="85" Header="Student ID" DisplayMemberBinding="{Binding Path=Studentid}" />
                                <GridViewColumn Width="85" Header="Course code" DisplayMemberBinding="{Binding Path=Coursecode}" />
                                <GridViewColumn Width="85" Header="Grade" DisplayMemberBinding="{Binding Path=Grade1}" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>

            <TabItem Header="Failed List">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
                        <TextBox x:Name="failedSearchBox" Width="150" Margin="0,0,10,0"/>
                        <Button x:Name="failedSearchButton" Content="Search Failed" Click="searchFailedButton_Click"/>
                    </StackPanel>
                    <ListView Name="FailedList" Margin="10" ItemsSource="{Binding FailedGrades}" Grid.Row="1">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="85" Header="Student ID" DisplayMemberBinding="{Binding Path=Studentid}" />
                                <GridViewColumn Width="85" Header="Course code" DisplayMemberBinding="{Binding Path=Coursecode}" />
                                <GridViewColumn Width="85" Header="Grade" DisplayMemberBinding="{Binding Path=Grade1}" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
